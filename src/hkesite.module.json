{
    "$schema": "../.sitecore/schemas/ModuleFile.schema.json",
    "namespace": "HKESite",
    "items": {
        "includes": [
            {
                "name": "layout",
                "path": "/sitecore/layout/Placeholder Settings",
                "allowedPushOperations": "CreateUpdateAndDelete"
            },
            {
                "name": "templates",
                "path": "/sitecore/Templates",
                "allowedPushOperations": "CreateUpdateAndDelete"
            },
            {
              "name": "renderings",
              "path": "/sitecore/layout/Renderings",
              "allowedPushOperations": "CreateUpdateAndDelete"
            },
            {
                "name": "contentRoot",
                "path": "/sitecore/content",
                "allowedPushOperations": "CreateUpdateAndDelete"
            },
            {
                "name": "media",
                "path": "/sitecore/Media Library",
                "allowedPushOperations": "CreateUpdateAndDelete",
                "rules": [
                    {
                        "path": "/Default Website",
                        "scope": "ignored"
                    },
                    {
                        "path": "/Foundation",
                        "scope": "ignored"
                    },
                    {
                        "path": "/Feature",
                        "scope": "ignored"
                    },
                    {
                        "path": "/Base Themes",
                        "scope": "ignored"
                    },
                    {
                        "path": "/Themes",
                        "scope": "ignored"
                    },
                    {
                        "path": "/Extension Themes",
                        "scope": "ignored"
                    },
                    {
                        "path": "/System",
                        "scope": "ignored"
                    }
                ]
            }
        ]
    }
}